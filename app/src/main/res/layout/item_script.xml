<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/single_list_item_item_height">

  <ImageView
      android:id="@+id/icon"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center_vertical|start"
      android:layout_marginLeft="@dimen/list_item_padding_horizontal_material"
      android:layout_marginStart="@dimen/list_item_padding_horizontal_material"
      tools:src="@drawable/ic_code_array_white_24dp"
      tools:tint="#0099cc"/>

  <TextView
      android:id="@+id/text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/list_item_content_padding_horizontal_material"
      android:layout_marginStart="@dimen/list_item_content_padding_horizontal_material"
      android:textAppearance="?android:textAppearanceMedium"
      tools:text="Reboot recovery"/>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_gravity="bottom"
      android:layout_marginLeft="@dimen/list_item_content_padding_horizontal_material"
      android:layout_marginStart="@dimen/list_item_content_padding_horizontal_material"
      android:background="?dividerColor" />


</FrameLayout>